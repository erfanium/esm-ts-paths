{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "strict": true,
    "lib": ["es2022"],
    "target": "es2022",
    "module": "es2022",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "$src/*": ["src/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "swc": false
  }
}
